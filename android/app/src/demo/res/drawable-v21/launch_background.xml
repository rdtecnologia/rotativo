<?xml version="1.0" encoding="utf-8"?>
<!-- Launch background for demo flavor (v21) -->
<layer-list xmlns:android="http://schemas/android/apk/res/android">
    <!-- Background gradient similar to our Flutter splash screen -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#5A7B97"
                android:endColor="#466783"
                android:angle="90" />
        </shape>
    </item>

    <!-- Logo at center -->
    <item>
        <bitmap
            android:gravity="center"
            android:src="@mipmap/ic_launcher" />
    </item>
</layer-list>
