{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        // ==========================================
        // üèôÔ∏è FLAVORS POR CIDADE - ANDROID
        // ==========================================
        {
            "name": "üèõÔ∏è Demo - Android Debug",
            "request": "launch",
            "type": "dart",
            "flutterMode": "debug",
            "args": [
                "--flavor",
                "demo",
                "--dart-define-from-file",
                "env/demo.json",
                "--target",
                "lib/main.dart",
                "--web-browser-flag",
                "--disable-web-security"
            ]
        },
        {
            "name": "üí∞ Ouro Preto - Debug",
            "request": "launch",
            "type": "dart",
            "flutterMode": "debug",
            "args": [
                "--flavor",
                "ouroPreto",
                "--dart-define-from-file",
                "env/ouroPreto.json",
                "--target",
                "lib/main.dart",
                "--web-browser-flag",
                "--disable-web-security",
                "--debug"
            ]
        },
        {
            "name": "üí∞ Vi√ßosa - Debug",
            "request": "launch",
            "type": "dart",
            "flutterMode": "debug",
            "args": [
                "--flavor",
                "vicosa",
                "--dart-define-from-file",
                "env/vicosa.json",
                "--target",
                "lib/main.dart",
                "--web-browser-flag",
                "--disable-web-security",
                "--debug"
            ]
        },
        // ==========================================
        // üì± FLAVORS POR CIDADE - RELEASE ANDROID
        // ==========================================
        {
            "name": "üèõÔ∏è Demo - Android Release",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release",
            "args": [
                "--flavor",
                "demo",
                "--dart-define-from-file",
                "env/demo.json",
                "--target",
                "lib/main.dart"
            ]
        },
        {
            "name": "üí∞ Ouro Preto - Android Release",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release",
            "args": [
                "--flavor",
                "ouroPreto",
                "--dart-define-from-file",
                "env/ouroPreto.json",
                "--target",
                "lib/main.dart"
            ]
        },
        // ==========================================
        // üîß CONFIGURA√á√ïES AVAN√áADAS
        // ==========================================
        {
            "name": "üîß Custom Device",
            "request": "launch",
            "type": "dart",
            "flutterMode": "debug",
            "deviceId": "${input:deviceId}",
            "args": [
                "--flavor",
                "${input:flavorName}",
                "--dart-define-from-file",
                "env/${input:flavorName}.json",
                "--target",
                "lib/main.dart"
            ]
        }
    ],
    "inputs": [
        {
            "id": "deviceId",
            "description": "Device ID",
            "default": "emulator-5554",
            "type": "promptString"
        },
        {
            "id": "flavorName",
            "description": "Flavor Name",
            "default": "demo",
            "type": "pickString",
            "options": [
                "demo",
                "ouroPreto",
                "vicosa"
            ]
        }
    ]
}