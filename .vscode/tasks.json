{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Limpar build",
            "type": "shell",
            "command": "flutter clean"
        },
        {
            "label": "Build APK Ouro Preto",
            "type": "shell",
            "command": "flutter build apk --release --flavor ouroPreto --dart-define-from-file=env/ouroPreto.json --target=lib/main.dart"
        },
        {
            "label": "Build AAB Ouro Preto",
            "type": "shell",
            "command": "flutter build appbundle --release --flavor ouroPreto --dart-define-from-file=env/ouroPreto.json --target=lib/main.dart"
        },
        {
            "label": "Build IPA Ouro Preto",
            "type": "shell",
            "command": "flutter build ipa --flavor ouropreto  -t lib/main.dart --dart-define-from-file=env/ouroPreto.json â€”release"
        },
        {
            "label": "Renomear APK Ouro Preto",
            "type": "shell",
            "command": "mv build/app/outputs/flutter-apk/app-ouroPreto-release.apk build/app/outputs/flutter-apk/meu_app_ouropreto_v1.0.0.apk"
        },
        {
            "label": "Build Ouro Preto APK",
            "dependsOn": [
                "Limpar build",
                "Build APK Ouro Preto"
                //"ðŸ“¦ Renomear APK Ouro Preto"
            ],
            "dependsOrder": "sequence"
        },
        {
            "label": "Build Ouro Preto AAB",
            "dependsOn": [
                "Limpar build",
                "Build AAB Ouro Preto"
                //"ðŸ“¦ Renomear APK Ouro Preto"
            ],
            "dependsOrder": "sequence"
        },
        {
            "label": "Build Ouro Preto IPA",
            "dependsOn": [
                "Limpar build",
                "Build IPA Ouro Preto"
                //"ðŸ“¦ Renomear APK Ouro Preto"
            ],
            "dependsOrder": "sequence"
        }
    ]
}